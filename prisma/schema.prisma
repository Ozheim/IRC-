  

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


//  ------------------------------------------------- 
// Section message 

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  timestamp DateTime @default(now())
  channelId Int
  pseudo    Pseudo   @relation(fields: [pseudoId], references: [id])
  pseudoId  Int
}

// ------------------------------------------------------

// section pseudo 

model Pseudo {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  messages  Message[]
}

